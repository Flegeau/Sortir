{{ form_start(form) }}
{{ form_row(form._token) }}
<div class="row justify-content-around mt-5">
    <div class="col-5">
        <div class="mb-3">
            <label for="sortie_nom" class="form-label required">Nom de la sortie</label>
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="mb-3">
            <label for="sortie_dateHeureDebut" class="form-label required">Date et heure de la sortie</label>
            {{ form_widget(form.dateHeureDebut) }}
            {{ form_errors(form.dateHeureDebut) }}
        </div>
        <div class="mb-3">
            <label for="sortie_dateLimiteInscription" class="form-label required">Date limite d'inscription</label>
            {{ form_widget(form.dateLimiteInscription) }}
            {{ form_errors(form.dateLimiteInscription) }}
        </div>
        <div class="mb-3">
            <div class="row justify-content-around">
                <div class="col">
                    <label for="sortie_duree" class="form-label required">Dur√©e</label>
                    {{ form_widget(form.duree) }}
                    {{ form_errors(form.duree) }}
                </div>
                <div class="col">
                    <label for="sortie_nbInscriptionsMax" class="form-label required">Nombre de places</label>
                    {{ form_widget(form.nbInscriptionsMax) }}
                    {{ form_errors(form.nbInscriptionsMax) }}
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="sortie_infoSortie" class="form-label required">Description et infos</label>
            {{ form_widget(form.infoSortie) }}
            {{ form_errors(form.infoSortie) }}
        </div>
    </div>
    <div class="col-5">
        <div class="mb-3">
            <label for="sortie_campus" class="form-label required">Campus</label>
            {{ form_widget(form.campus) }}
            {{ form_errors(form.campus) }}
        </div>
        <div class="mb-3">
            <label class="form-label required" for="sortie_lieu">Lieu</label>
            <div class="mb-3 input-group">
                <select id="sortie_lieu" name="sortie[lieu]" class="form-select" required="required">
                {% for lieu in lieus %}
                    <option value="{{ lieu.id }}" {{ sortie.lieu.id is same as(lieu.id) ? 'selected' : '' }}>{{ lieu.nom }}</option>
                {% endfor %}
                </select>
                <span class="input-group-btn ms-2">
                    <a href="{{ path('app_lieu_new') }}" target="_blank" class="btn"><strong>+</strong></a>
                </span>
            </div>
        </div>
        <div class="mb-3">
            <label for="sortie_rue" class="form-label required">Rue</label>
            {{ form_widget(form.rue) }}
        </div>
        <div class="mb-3">
            <div class="mb-3">
                <label class="form-label required" for="sortie_codePostal">Code postal</label>
                <input type="text" id="sortie_codePostal" name="sortie[codePostal]" readonly="readonly"
                       class="form-control" value="{{ sortie.lieu.ville.codePostal }}">
            </div>
        </div>
        <div class="mb-3">
            <div class="row justify-content-around">
                <div class="col">
                    <label for="sortie_latitude" class="form-label required">Latitude</label>
                    {{ form_widget(form.latitude) }}
                </div>
                <div class="col">
                    <label for="sortie_longitude" class="form-label required">Longitude</label>
                    {{ form_widget(form.longitude) }}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="mt-4 mb-4">
        <div id="groupe-boutons">
            <div class="bouton">
                {{ form_widget(form.enregistrer) }}
            </div>
            <div class="bouton">
                {{ form_widget(form.publier) }}
            </div>
            {{ form_end(form) }}
            <div class="bouton">
                {{ include('sortie/_delete_form.html.twig') }}
            </div>
            <div class="bouton">
                <a href="{{ path('app_sortie_list') }}" class="btn btn-secondary" role="button">Annuler</a>
            </div>
        </div>
    </div>
</div>