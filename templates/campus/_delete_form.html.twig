<form id="supprimer_campus_{{ campus.id }}" method="post" action="{{ path('app_campus_delete', {'id': campus.id}) }}"
      onsubmit="return confirm('Confirmez-vous la suppression du campus ?');">
    <input type="hidden" name="_token_delete" value="{{ csrf_token('delete' ~ campus.id) }}">
    <a href="javascript:void(0)" onclick="document.getElementById('supprimer_campus_{{ campus.id }}').submit();">
        <i class="fa-regular fa-trash-can"></i>
    </a>
</form>