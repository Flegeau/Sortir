{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <div style="display: grid;background-color: #ebebeb;border-radius: 10px;height: auto;width: 45%;margin: 10px auto 10px; padding-bottom: 10px">
        <div style="text-align: center;margin-left: 2%;border: 2px dashed #3a57af;display: inline-block;border-radius: 7px;margin-top: 1%;width: 95%;height: auto; padding-bottom: 10px">
            <h1>Participant</h1>
            {% if participant.photo != null %}
            <img src="{{ asset('uploads/photos/' ~ participant.photo) }}" alt="profil picture">
            {% endif %}
            <div>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ participant.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ participant.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ participant.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ participant.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Mail</th>
                        <td>{{ participant.email }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ participant.pseudo }}</td>
                    </tr>
                    <tr>
                        <th>Actif</th>
                        <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <a href="{{ path('app_sortie_list') }}"><i class="fa-solid fa-circle-arrow-left fa-2xl"></i></a>
                <a style="margin-left: 10%" href="{{ path('app_participant_edit', {'id': participant.id}) }}"><i class="fa-solid fa-pen fa-2xl"></i></a>
                {% if is_granted("ROLE_ADMIN") %}
                    <a style="margin-left: 10%" href="{{ path('app_participant_index') }}"><i class="fa-solid fa-address-book fa-2xl"></i></a>
                {% endif %}
            </div>
        </div>
        </div>

{% endblock %}
